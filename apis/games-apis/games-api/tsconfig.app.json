{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node", "express"],
    "declaration": true,
    "composite": true
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "../../../libs/**/*.spec.tsx",
    "../../../libs/**/*.spec.ts",
    "../../../libs/**/*.test.tsx",
    "../../../libs/**/*.test.ts",
    "../../../libs/**/*jest.config.ts"
  ],
  "include": ["src/**/*.ts", "../../../libs/**/*.ts"]
}
